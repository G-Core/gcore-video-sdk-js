<button data-subtitles-button class='media-control-button media-control-icon gcore-skin-button-color'>
    <span class='subtitle-text'></span>
</button>

<ul class='gcore-skin-bg-color'>
    <li><a href="#" class='gcore-skin-text-color' data-subtitles-select="off">off</a></li>
    <% for (var i = 0; i < tracks.length; i++) { %>
        <% if (tracks[i].kind === 'subtitles') { %>
            <li>
                <a href="#" class='gcore-skin-text-color' data-subtitles-select="<%= tracks[i].language %>">
                    <%= tracks[i].label %>
                </a>
            </li>
        <% } %>
    <% } %>
</ul>
